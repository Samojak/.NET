@page "/"
@page "/posts"
@inject IPostService PostService
@using ApiContracts
@using BlazorApp.Services

<div class="container mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h3 class="mb-0">Posts</h3>

        <div class="input-group" style="max-width: 360px;">
            <input class="form-control" placeholder="Search title…" @bind="q" @bind:event="oninput" />
            <button class="btn btn-outline-secondary" @onclick="Load">Search</button>
        </div>
    </div>

    @if (loading)
    {
        <div class="text-muted">Loading…</div>
    }
    else if (error is not null)
    {
        <div class="alert alert-danger">@error</div>
    }
    else if (posts is null || posts.Count == 0)
    {
        <div class="card shadow-sm">
            <div class="card-body text-center text-muted">
                No posts yet.
            </div>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var post in posts)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate">@post.Title</h5>
                            <p class="card-text text-truncate">@post.Body</p>
                            <small class="text-secondary mb-3">by user @post.UserID</small>
                            <a class="btn btn-primary mt-auto" href="@($"/postdetails/{post.Id}")">
                                View details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<PostDto>? posts;
    private string? q;
    private bool loading;
    private string? error;

    protected override async Task OnInitializedAsync() => await Load();

    private async Task Load()
    {
        loading = true;
        error = null;
        try
        {
            posts = await PostService.GetAllPostsAsync(titleContains: q);
        }
        catch (Exception e)
        {
            error = e.Message;
        }
        finally
        {
            loading = false;
            StateHasChanged();
        }
    }
}
